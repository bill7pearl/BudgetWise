<div  class="transact-new">
    <h3>Add new Transactions</h3>

    <%= form_with(model: @entity, url: category_entities_path, method: :post, class: 'create-new-transact-form') do |f| %>

        <div class="field">
            <%= f.label :name %> <br>
            <%= f.text_field :name, placeholder: 'Enter Transaction name', class: 'name-input' %>
        </div>

        <div class="field">
            <%= f.label :amount %><br>
            <%= f.number_field :amount, step: 1, placeholder: 'How much did you spend', class: 'amount-input' %>
        </div>

        <% if @categories %>
        <div class="cat-select-field">
            <%= f.label :categories %>
            <%= f.collection_check_boxes(:category_ids, @categories, :id, :name) do |b| %>
                <div class="checkbox">
                <%= b.check_box + b.label %>
                </div>
            <% end %>
        </div>
        <% end %>
            <%= f.submit 'Save', class: 'Submit-transaction-btn' %>

    <% end %>
</div>